# NanoClaw environment configuration
# Copy to .env and fill in values

# Assistant name (used for trigger pattern @Name)
ASSISTANT_NAME=

# Claude API authentication (one of these is required)
ANTHROPIC_API_KEY=
CLAUDE_CODE_OAUTH_TOKEN=

# Signal (signal-cli-rest-api sidecar)
SIGNAL_API_URL=http://localhost:8080
SIGNAL_PHONE_NUMBER=

# GitHub (read-only PAT for gh CLI in containers)
# Can be overridden per-group in groups/{folder}/.env
GH_TOKEN=
